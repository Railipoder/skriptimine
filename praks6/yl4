#!/bin/bash
#
# see skript vÃµimaldab kasutajale sisestada algarvu
# ja tuvastab, kas sisestatud arv on algarv 
#
echo -n "Sisesta suvaline arv "
read arv
if [ $arv -eq 0 -o $arv -eq 1 ] && [ $arv -le 20 ]; then
      echo "$arv ei ole algarv"
elif [ $arv -gt 20 ]; then
      echo "Sisestatud on liiga suur number"
else
      jagaja=2
      jaak=$(($arv % $jagaja))
      while [ $jaak -ne 0 ]
      do
                      jagaja=$(($jagaja + 1))
                      jaak=$(($arv % $jagaja))
      done
      if [ $arv -eq $jagaja ]; then
                      echo  "$arv on algarv"
      else
                      echo "$arv ei ole algarv"
      fi

fi
